<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wowshop!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <style>
        .dropdown {
            position:inherit;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
            z-index: 1
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Products", "Shopping", "Products", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Checkout", "Index", "Customers/CreateOrder", new { area = "" }, new { @class = "navbar-brand" })

                <div class="dropdown">
                    @Html.ActionLink("ShoppingChart", "Index", "ShoppingChart", new { area = "" }, new { @class = "navbar-brand" })

                    @*<iframe style="height: 50px; width: 500px;" src=@Url.Action("LastAddedProduct", "ShoppingChart")></iframe>*@

                    <div class="navbar-text">
                        @Html.Action("LastAddedProduct", "ShoppingChart")
                    </div>

                    <div class="dropdown-content">
                        <iframe width="500" height="250" src=@Url.Action("Index", "ShoppingChart")></iframe>
                    </div>
                </div>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>



    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-header">
                <p style="color:white">&copy; @DateTime.Now.Year - Oscar Persson S131469, Jonathan Knutsson S143975, Henrik Wistbacka S142066</p>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>

    </div>



    <div class="container body-content">

        <br />
        <br />
        <br />
        <br />
        @RenderBody()

    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
